<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BudgetTrack" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Color scheme -->
        <item name="android:colorPrimary">@color/green</item>
        <item name="android:colorPrimaryDark">@color/green_dark</item>
        <item name="android:colorAccent">@color/blue</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorSecondary">?android:attr/colorPrimary</item>

        <!-- Navigation -->
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- Splash screen -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">?attr/colorSurface</item>
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="s">?attr/colorSurface</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/avd_splash_logo</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">1000</item>
        <item name="android:windowSplashScreenBehavior" tools:targetApi="tiramisu">icon_preferred</item>
    </style>

    <style name="Theme.BudgetTrack" parent="Base.Theme.BudgetTrack" />

    <style name="Theme.BudgetTrack.Button" parent="Widget.Material3.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Medium</item>
        <item name="backgroundTint">@color/green</item>
    </style>

    <style name="Theme.BudgetTrack.Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <!-- Disable ripple effect -->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/green_dark</item>
    </style>

    <style name="Theme.BudgetTrack.BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">?colorSurface</item>
    </style>

    <style name="Theme.BudgetTrack.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemRippleColor">@null</item>
        <item name="itemPaddingTop">16dp</item>
        <item name="itemPaddingBottom">20dp</item>
        <item name="itemIconTint">@color/bottom_nav_item_color_selector</item>
        <item name="itemTextColor">@color/bottom_nav_item_color_selector</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextAppearanceActiveBoldEnabled">false</item>
    </style>

    <style name="Theme.BudgetTrack.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">?colorOnPrimary</item>
        <item name="colorPrimary">?colorAccent</item>
        <item name="colorPrimaryVariant">?colorPrimaryDark</item>
        <item name="colorOnPrimary">?colorOnPrimary</item>
    </style>

    <style name="Theme.BudgetTrack.Dialog.LoadingDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowElevation">0dp</item>
    </style>
</resources>