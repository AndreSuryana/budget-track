<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Title Section -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title_overall_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/marginNormal"
        android:text="@string/title_overall_details"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

    <!-- Subtitle Section -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/subtitle_overall_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/marginNormal"
        android:layout_marginTop="@dimen/marginExtraSmall"
        android:text="@string/subtitle_overall_details"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall" />

    <!-- List of Details Section -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/marginNormal"
        tools:itemCount="4"
        tools:listitem="@layout/item_expense_detail" />

</LinearLayout>