<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:gravity="center_vertical"
    android:longClickable="false"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/paddingSmall">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_weight="0.5"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        android:textStyle="bold" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/expense_progress"
        style="@style/Widget.Material3.LinearProgressIndicator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        app:indicatorColor="?android:colorPrimary"
        app:trackColor="?android:textColorSecondaryInverse"
        app:trackCornerRadius="@dimen/cardRadiusNormal"
        app:trackThickness="12dp"
        tools:progress="60" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/percent"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:text="@string/default_percentage"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.Material3.LabelMedium" />

</LinearLayout>